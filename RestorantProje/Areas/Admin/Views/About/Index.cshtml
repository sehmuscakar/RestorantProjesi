@model IEnumerable<Repository.Entities.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a class="btn btn-danger" asp-action="Create">Yeni Kurumsal Alanı Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Header)
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Experience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chefs)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mission)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.vision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Header)
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.Image1)" alt="" class="form control" height="50" />
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.Image2)" alt="" class="form control" height="50" />
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.Image3)" alt="" class="form control" height="50" />
            </td>
            <td>
                    <img src="~/Img/@Html.DisplayFor(modelItem => item.Image4)" alt="" class="form control" height="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Experience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chefs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mission)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vision)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
      
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td> 
           
            <td>
                    <a class="btn btn-outline-danger" asp-action="Edit" asp-route-id="@item.Id">Güncelle</a>
                   
                    <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>     
}
    </tbody>
</table>
