
@model Repository.Entities.Contact
@{
    ViewData["Title"] = "CreateContact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact Start -->
<div class="container-xxl py-5">
    <form asp-action="CreateContact" method="post">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h5 class="section-title ff-secondary text-center text-primary fw-normal">Bize Ulaşın</h5>
                <h1 class="mb-5">Herhangi Bir Sorgu İçin İletişime Geçin</h1>
        </div>
        <div class="row g-4">
           
            <div class="col-12">
                <div class="row gy-4">
                   
                    <div class="col-md-4">
                            <h5  class="section-title ff-secondary fw-normal text-start text-primary">Rezervasyon</h5>
                        <p><i class="fa fa-envelope-open text-primary me-2"></i>Rezervasyon@gmail.com</p>
                    </div>
                    <div class="col-md-4">
                            <h5 class="section-title ff-secondary fw-normal text-start text-primary">Genel</h5>
                            <p><i class="fa fa-envelope-open text-primary me-2"></i>Genel@gmail.com</p>
                    </div>
                    <div class="col-md-4">
                            <h5 class="section-title ff-secondary fw-normal text-start text-primary">Teknik</h5>
                            <p><i class="fa fa-envelope-open text-primary me-2"></i>Teknik@gmail.com</p>
                    </div>
                </div>
            </div>
            <div class="col-md-6 wow fadeIn" data-wow-delay="0.1s">
                <iframe class="position-relative rounded w-100 h-100"
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3001156.4288297426!2d-78.01371936852176!3d42.72876761954724!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4ccc4bf0f123a5a9%3A0xddcfc6c1de189567!2sNew%20York%2C%20USA!5e0!3m2!1sen!2sbd!4v1603794290143!5m2!1sen!2sbd"
                        frameborder="0" style="min-height: 350px; border:0;" allowfullscreen="" aria-hidden="false"
                        tabindex="0">
             
                    </iframe>
            </div>
            <div class="col-md-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
         
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Name" class="form-control" placeholder="Adınız">
                                    <label asp-for="Name">Adınız</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Mail" class="form-control" placeholder="Mail">
                                    <label asp-for="Mail">İlgili Mail</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input asp-for="Subject" class="form-control"  placeholder="Mesaj Başlığı">
                                    <label asp-for="Subject" >Mesaj Konusu</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea asp-for="Message" class="form-control" placeholder="Mesajınızı buraya yazın lütfen"  style="height: 150px"></textarea>
                                    <label asp-for="Message" >Messajınızı buraya yazın lütfen</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Mesaj Gönder</button>
                            </div>
                        </div>
                
                </div>
            </div>
        
        </div>
    </div>
    </form>
</div>
<!-- Contact End -->

